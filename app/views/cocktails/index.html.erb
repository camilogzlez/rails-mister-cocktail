
 
 <div class="container">
<h2>All Our Cocktails</h2>
<div class="animationjs">
<p>
  <span id="banner-typed-text"></span>
</p>
</div>
<div class="cards col-12 col-sm-6 col-md-4 col-lg-4 mt-3">
  <% @cocktails.each do |cocktail|%>

  <div class="card" style="width: 18rem;">
  <% if cocktail.photo.attached? %>
    <img class="card-img-top" src= <%= cl_image_path(cocktail.photo.key)%> >
    <% end  %>
  <div class="card-body">
     <p class="card-text"><%= link_to cocktail.name, cocktail_path(cocktail) %></p>

  </div>
  </div>
<% end %>
</div>
</div> 


